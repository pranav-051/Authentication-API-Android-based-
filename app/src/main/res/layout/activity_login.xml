<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/light_gray"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:padding="18dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/loginApplogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/app_logo" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txetView_login_email"
        android:layout_marginTop="30dp"
        android:layout_below="@id/loginApplogo"
        android:layout_marginLeft="5dp"
        android:text="E-mail Address*"
        android:padding="3dp"
        android:textColor="#555555"
        android:textSize="16sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_login_email"
        android:layout_below="@id/txetView_login_email"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="8dp"
        android:padding="11dp"
        android:textSize="16sp"
        android:background="@drawable/border"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txetView_login_pwd"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:layout_below="@id/editText_login_email"
        android:text="Password*"
        android:textColor="#555555"
        android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:layout_marginTop="14dp"
            android:id="@+id/imageView_show_hide_pwd"
            android:layout_below="@id/txetView_login_pwd"/>

        <EditText
            android:id="@+id/editText_login_pwd"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txetView_login_pwd"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border"
            android:hint="Enter password"
            android:inputType="textPassword"
            android:padding="11dp"
            android:paddingTop="3dp"
            android:paddingRight="2dp"
            android:textSize="16sp" />
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button_login"
            android:layout_below="@+id/editText_login_pwd"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="@color/red"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:background="@drawable/border"
            android:padding="12dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/simple_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_login"
            android:layout_marginLeft="5dp"
            android:text="or sign-up using"
            android:textAlignment="center"
            android:textColor="#555555"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/google"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/simple_text"
            app:srcCompat="@drawable/ic_google" />

        <ImageView
            android:id="@+id/facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="102dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/simple_text"
            app:srcCompat="@drawable/ic_facebook" />

        <ImageView
            android:id="@+id/MS"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="28dp"
            android:layout_below="@id/simple_text"
            app:srcCompat="@drawable/ic_microsoft" />

        <ImageView
            android:id="@+id/x"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="29dp"
            android:layout_below="@id/simple_text"
            app:srcCompat="@drawable/ic_x" />

        <TextView
            android:id="@+id/simple_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/x"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:text="Don't have an account?   SignUp"
            android:textAlignment="center"
            android:textColor="#555555"
            android:textSize="16sp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:visibility="gone"/>

    </RelativeLayout>
</ScrollView>